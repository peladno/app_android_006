<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_food"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009688"
        android:text="My food"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="*">

        <TableRow android:layout_marginTop="@dimen/buttonSize">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/comida" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/app_minus"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0"
                        android:textAlignment="center" />


                    <Button
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/app_plus"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hamburguesa" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/app_minus"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0"
                        android:textAlignment="center" />


                    <Button
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/app_plus"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/buttonSize">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hamburguesa_vegana" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/app_minus"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0"
                        android:textAlignment="center" />


                    <Button
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/app_plus"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pizza" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/app_minus"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0"
                        android:textAlignment="center" />


                    <Button
                        android:layout_width="@dimen/buttonSize"
                        android:layout_height="@dimen/buttonSize"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/app_plus"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My address"
        android:layout_marginTop="50dp"/>


</androidx.appcompat.widget.LinearLayoutCompat>